@using DotNetSide.Model

@if (Items != null)
{
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        @for (int i = 0; i < Items.Length; i++)
        {
            <li data-target="#myCarousel" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
        }
    </ol>
    <div class="carousel-inner">
        @for (int i = 0; i < Items.Length; i++)
        {
            <div class="carousel-item@(i == 0 ? " active" : "")">
                <div class="img-container">
                    <img class="img-responsive" style="width: 100%; height: 512px; object-fit: cover" src="images/people-@(i).jpg" alt="@Items[i].Title">
                </div>
                <div class="container">
                    <div class="carousel-caption text-left">
                    <h1>@Items[i].Title</h1>
                    <p>@Items[i].Description</p>
                    <p><a class="btn btn-lg btn-primary" href="@Items[i].LinkHref" role="button">@Items[i].LinkText</a></p>
                    </div>
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
}

@functions
{
    [Parameter] CarouselItem[] Items {get;set;}
}